# Window
gap_x 10
gap_y 0
minimum_size 320 772 
own_window yes
own_window_colour 002b36
own_window_hints below,skip_pager
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_transparent yes
own_window_type normal

# Text
default_color eee8d5
draw_borders no
draw_outline no # amplifies text if yes
text_buffer_size 2048
uppercase no
use_xft yes
#xftalpha 0.8
xftfont UbuntuMono:size=10

# Other
alignment middle_right
#border_margin 9
border_width 10
double_buffer yes
draw_shades no
#minimum_size 250 5 # Minimum size of text area
stippled_borders 5 
update_interval 2
use_spacer right
